<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%=title %></title>
  </head>
  <body>
    <h1>Data Students</h1>
    <a href="/">Back to Home</a><br>
    <a href="/students/add"><input type="submit" name="" value="Tambah Data"></a>
    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%if (data){data.forEach(row=>{%>
          <tr>
            <td><%=row.id%></td>
            <td><%=row.first_name%></td>
            <td><%=row.last_name%></td>
            <td><%=row.email%></td>
            <td>
              <!-- <script type="text/javascript">
                confDelete()=>{
                  return confirm('Anda yakin menghapus data ini?');
                } -->
              </script>
              <a href="/students/edit/<%=row.id%>">Edit</a>
              <a onclick="javascript:return confirm('Anda yakin akan menghapus data ini?')" href="/students/delete/<%=row.id%>">Delete</a>
            </td>
          </tr>
        <%})}%>
      </tbody>
    </table>
  </body>
</html>
